          <th scope="col">Hora de examen</th>
          <th scope="col">Médico que ordena</th>
          <th scope="col">Observación del médico</th>
          <th scope="col">Agregar resultados</th>
          <th scope="col">¿Examen no realizado?</th>
        </tr>
      </thead>
      <tbody>   
        {{#each pList}} 
          <tr>
            <th scope="row">{{@index}}</th>

            <td>{{sec_lastnameRel}}</td>
            <td>{{identificationRel}}</td>
            <td>{{date_of_exam}}</td>
            <td>{{hour_of_exam}}</td>
            <td>{{name_of_doctor}} {{lastname_of_doctor}}</td>
            <td>{{observation_of_exam}}</td>
            <td>
                <a href="/exams/addResultForm/{{_id}}"><button class="btn btn-success btn-block">+</button></a>
            </td>
            <td>        
                <form action="/exams/valueExam/{{_id}}?_method=PUT" method="POST">
                  <input type="hidden" name="_method" value="PUT">  
                    <button type="submit" class="btn btn-danger btn-block nobtn">
                        No
                    </button> 
                  <input type="hidden" name="value_of_exam" value="notAssist">
                </form>
            </td>
          </tr>
        {{/each}}     
      </tbody>
    </table>
  {{else}}
    <br>
    <br>
    <br>
    <div>
      <h4>No se encontraron exámenes realizados.</h4>
    </div>
  {{/if}}
</div>
{{/if}}

